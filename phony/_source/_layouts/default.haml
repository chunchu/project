%html{ :xmlns => "http://www.w3.org/1999/xhtml", :'xml:lang' => "en", :lang => "en" }
  %head
    %meta{ :'http-equiv' => "Content-type", :content => "text/html; charset=utf-8" }
    %meta{ :'http-equiv' => 'Content-Language', :content => 'EN' }
    %meta{ :name => 'author', :content => 'Florian Hanke, florianhanke.com' }
    %meta{ :name => 'keywords', :content => 'phony, ruby, e164, telephone, phone, normalizing, formatting, splitting' }
    %meta{ :name => 'abstract', :content => 'Phony: Formatting, Splitting, Normalizing international E164 phone numbers with Ruby.' }
    %meta{ :name => 'description', :content => 'Phony: Formatting, Splitting, Normalizing international E164 phone numbers with Ruby.' }
    %meta{ :name => 'robots', :content => 'index, follow' }
    %meta{ :name => 'revisit-after', :content => '3 days' }
    %link{ :rel => 'shortcut icon', :href => './favico.ico' }
    %link{ :rel => 'stylesheet', :href => 'basic.css', :type => 'text/css' }
    %link{ :rel => 'stylesheet', :href => 'specific.css', :type => 'text/css' }
    %link{ :rel => 'stylesheet', :href => 'grid.css', :type => 'text/css' }
    %title
      Phony:
      = h page.title
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-20991642-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body
    .header
      %a{ :href => 'http://github.com/floere/phony' }
        %img{ :style => 'position: fixed; top: -10px; right: 0; border: 0;', :src => 'http://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png', :alt => 'Fork me on GitHub' }
      .phony
    .container_2
      %h1 Phony
      .navigation
        - def class_for(url, klass = ''); if page.url == url then "current #{klass}" else klass end end
        %a{ :href => 'index.html', :class => class_for('/index.html') } about
        %a{ :href => 'e164.html', :class => class_for('/e164.html') } E164
        %a{ :href => 'examples.html', :class => class_for('/examples.html') } examples
        %a{ :href => 'status.html', :class => class_for('/status.html') } status and contributions
        
    = content
    .container_2
      .grid_2
        .decoration
    .footer
